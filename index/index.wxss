page {
    width: 100%;
    height: 100%;
    position: relative;
}

.container {
    width: 100%;
    height: 100%;
    position: relative;
}

.container camera,
.container canvas {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
}

.container .actions .toggle-cube-move {
    position: fixed;
    left: 0;
    bottom: 40px;
    width: 100%;
    background: rgba(255,255,255,.3);
    line-height: 2;
    text-align: center;
    border: 1px solid red;
}